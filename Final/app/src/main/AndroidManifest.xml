<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.orbital">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_circle_nowords"
        android:label="Voluntier"
        android:roundIcon="@drawable/logo_circle_nowords"
        android:supportsRtl="true"
        android:theme="@style/Theme.Orbital">
        <activity android:name=".Whatsapp"></activity>
        <activity android:name=".specifichat" />
        <activity android:name=".ChatsLog" />
        <activity android:name=".Editprofile" />
        <activity
            android:name=".Splashscreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Loginpage"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize"
            tools:ignore="ExtraText" />
        <activity
            android:name=".Homescreen"
            android:label="Voluntier"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".UpdateParticulars"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".Chat" />
        <activity android:name=".EventInfo" />
        <activity android:name=".Survey" />
        <activity android:name=".Joined" />
        <activity
            android:name=".EventList"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".Profile" />
        <activity
            android:name=".QRCapture"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />
        <activity
            android:name=".UpcomingEventInfo"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".PastEventInfo"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize" />
    </application>
    <queries> <package android:name="com.whatsapp" /> </queries>

</manifest>